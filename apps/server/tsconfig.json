{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    "../../packages/shared/src/services",
    "../../packages/shared/src/constants/env.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
